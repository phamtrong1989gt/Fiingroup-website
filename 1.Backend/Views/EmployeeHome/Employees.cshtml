@model List<PT.Domain.Model.Employee>
@addTagHelper *, PT.UI
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer  Localizer
@{
    Layout = "~/Views/Shared/_Home.cshtml";
    string language = PT.Base.CultureHelper.GetCurrentCulture.Id;
}
<div class="page-content">
    <div class="section mt-0">
        <div class="breadcrumbs-wrap">
            <div class="container">
                <div class="breadcrumbs">
                    <a href="/@language">@Localizer["Home"].Value</a>
                    <span>@Localizer["Our Specialists"].Value</span>
                </div>
            </div>
        </div>
    </div>
    <div class="section page-content-first">
        <div class="container">
            <div class="text-center mb-2  mb-md-3 mb-lg-4">
                <div class="h-sub theme-color">@Localizer["Meet the Team"].Value</div>
                <h1 class="bigTitle">@Localizer["Our Specialists"].Value</h1>
                <div class="h-decor"></div>
            </div>
        </div>
        <div class="container">
            <div class="text-center mb-2 mb-md-3">
                <p>@Localizer["Summary"].Value</p>
            </div>
            <div class="gallery-specialist gallery-isotope" id="gallery-specialist">
                @foreach (var item in Model)
                {
                    string url = PT.Shared.Functions.FormatUrl(item.Language, item.Link?.Slug);
                    <div class="gallery-item @(item.Endodontics?"category1":"") @(item.GeneralDentistry?"category2":"") @(item.OralMedicine?"category3":"") @(item.OralSurgery?"category4":"") @(item.Orthodontics?"category5":"") @(item.Periodontics?"category6":"") @(item.Prosthodontics?"category7":"")">
                        <div class="doctor-box text-center pb-3">
                            <div class="doctor-box-photo">
                                <img onerror="this.onerror=null;this.src = '/Content/Home/images/No_Image_Available.jpg';" src="@($"/data/image?path={item.Banner}&size=600")" class="img-fluid" alt="@item.FullName">
                            </div>
                            <h5 class="doctor-box-name">@item.FullName</h5>
                            <div class="doctor-box-position">@Localizer[item.Job.ToString()]</div>
                            <div class="doctor-box-text">
                                @Html.Raw(item.Content)
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (language == "vi")
    {
        <vc:view-module id="1008" type="StaticInformation"></vc:view-module>
    }
    else if (language == "en")
    {
        <vc:view-module id="1009" type="StaticInformation"></vc:view-module>
    }
</div>
<div style="height:50px;">
</div>
@section Scripts
{
    <script src="~/Content/Admin/plugins/jquery-slimscroll/jquery.slimscroll.js" type="text/javascript"></script>
    <script>
        $(".doctor-box-text").slimscroll({
                height: "200px"
            });
    </script>
}

