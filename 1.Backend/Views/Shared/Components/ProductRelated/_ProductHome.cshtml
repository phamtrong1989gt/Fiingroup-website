@model ComponentModel<Product>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer  Localizer
@{
    Layout = null;
}

<section class="s-equipments">
    <div class="uk-section uk-container uk-container-large">
        <div class="section-title --center">
            <h3>Main products</h3>
        </div>
        <div class="section-content">
            <div data-uk-slider>
                <div class="uk-position-relative" tabindex="-1">
                    <ul class="uk-slider-items uk-grid uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-4@l">
                        @foreach (var item in Model.Items)
                        {
                            string url = @PT.Shared.Functions.FormatUrl(null, item.Link?.Slug);
                            <li>
                                <div class="equipment-item">
                                    <div class="equipment-item__box">
                                        <div class="equipment-item__media"><a href="@url"><img src="@item.Banner" alt="@item.Name" /></a></div>
                                        <div class="equipment-item__info">
                                            <div class="equipment-item__title"><a href="@url">@item.Name</a></div>
                                        </div>
                                        <div class="equipment-item__btn"><a class="uk-button uk-button-default uk-button-large uk-width-1-1" href="@url"><span>View</span><span data-uk-icon="arrow-right"></span></a></div>
                                    </div>
                                </div>
                            </li>
                        }
                       
                    </ul>
                </div>
                <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin-medium-top"></ul>
            </div>
        </div>
    </div>
</section>