@model PT.Domain.Model.BindContentSettings
@addTagHelper *, Sakura.AspNetCore.Mvc.PagedList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, PT.UI
@{
    Layout = null;
}
<form form-edit asp-action="BindContent">
    <div role="tabpanel" class="tab-pane fade in active" id="tab1">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" asp-for="Head"></label> <span asp-validation-for="Head"></span>
                    <div class="controls">
                        <textarea type="text" rows="3" class="form-control input-sm form-control-t" placeholder="chèn vào head" asp-for="Head"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Body"></label> <span asp-validation-for="Body"></span>
                    <div class="controls">
                        <textarea type="text" rows="3" class="form-control input-sm form-control-t" placeholder="chèn vào body" asp-for="Body"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Footer"></label> <span asp-validation-for="Footer"></span>
                    <div class="controls">
                        <textarea type="text" rows="3" class="form-control input-sm form-control-t" placeholder="chèn vào footer" asp-for="Footer"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12 mb-0">
                <div class="divbtnform">
                    <button button-submit data-type="content" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" type="button" class="btn  btn-p-t  btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></button>
                </div>
            </div>
        </div>
    </div>
        
</form>
<script>
    initRickTextContent();
</script>

