@model PT.Domain.Model.EmailSettings
@addTagHelper *, Sakura.AspNetCore.Mvc.PagedList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, PT.UI
@{
    Layout = null;
}
<form form-edit asp-action="Email">
    @Html.AntiForgeryToken()
    <div role="tabpanel" class="tab-pane fade in active" id="tab1">
        <div class="row">
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Email"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Email">
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Password"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Password">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label" asp-for="Port"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Port"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Port">
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label" asp-for="Host"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Host"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Host">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label" asp-for="From"></label> <strong class="text-danger">*</strong> <span asp-validation-for="From"></span>
                    <div class="controls">
                        <input type="text" id="emailSent" class="form-control input-sm form-control-t" placeholder="" asp-for="From">
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-0">
                <div class="form-group">
                    <label class="form-label">Test gửi email</label>
                    <div class="input-group input-group-t">
                        <div class="input-group-addon br-none">
                            &nbsp;
                            <i class="material-icons">verified_user</i>
                        </div>
                        <input type="text" name="emailSent" class="form-control input-sm form-control-t">
                        <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                            <a button-post data-action="@Url.Action("SendEmail")" data-loading-text="<i class='material-icons icon-spin iconloadding-gr'>autorenew</i>" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">send</i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-0 mt-5">
                <div class="divbtnform">
                    <button button-submit data-loading-text="<i class='material-icons icon-spin '>autorenew</i> <span>Lưu thay đổi</span>" type="button" class="btn  btn-p-t btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></button>
                </div>
            </div>
        </div>
    </div>
</form>
