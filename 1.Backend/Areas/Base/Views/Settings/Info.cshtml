                        <div class="form-group">
                            <label class="form-label" asp-for="Website"></label> <span asp-validation-for="Website"></span>
                            <div class="controls">
                                <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Website">
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label class="form-label" asp-for="Fax"></label> <span asp-validation-for="Fax"></span>
                            <div class="controls">
                                <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Fax">
                            </div>
                        </div>
                        
                    </div>
                    <div class="col-md-6 mb-0">
                        <div class="form-group">
                            <label class="form-label" asp-for="Note"></label> <span asp-validation-for="Note"></span>
                            <div class="controls">
                                <textarea type="text" rows="4" class="form-control input-sm form-control-t" placeholder="" asp-for="Note"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Video"></label> <span asp-validation-for="Video"></span>
                            <div class="controls">
                                <textarea type="text" rows="3" class="form-control input-sm form-control-t" placeholder="" asp-for="Video"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Map"></label> <span asp-validation-for="Map"></span>
                            <div class="controls">
                                <textarea type="text" rows="3" class="form-control input-sm form-control-t" placeholder="" asp-for="Map"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-12 mb-0">
                        <div class="divbtnform">
                            <button button-submit data-type="info" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" type="button" class="btn  btn-p-t  btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
<script>
    initRickTextInfo();
</script>

