@model PT.Domain.Model.PromotionInformationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Options.IOptions<PT.Domain.Model.BaseSettings> _baseSettings
@{
    Layout = null;
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<form form-edit asp-action="Create">
    <input type="hidden" asp-for="Language" />

    <input type="hidden" name="categoryIds" />
    @Html.AntiForgeryToken()
    <input asp-for="Language" type="hidden" />
    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> THÊM MỚI TRANG THÔNG TIN KHUYẾN MÃI - <span class="text-danger">@PT.Shared.ListData.ListLanguage.FirstOrDefault(x => x.Id == Model.Language)?.Name</span></h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="row">
                <div class="col-md-3">
                    <div class="labelinfo-t bg-info mb-10">
                        BANNER
                    </div>
                    <div>
                        <div class="thumbnail imgfull avatar m-b-10" file-loadding>
                            <div class="image">
                                <img file-image id="imgBanner" alt="avatar" onerror="this.onerror=null;this.src = '/Content/Admin/images/no-avatar.jpg';" src="@(Model.Banner??" ")" class="img-responsive">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-t">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Banner">
                                <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                                    <a button-open-file-manager data-img="imgBanner" data-target="Banner" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">attach_file</i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="labelinfo-t bg-info mb-10">
                        CẤU HÌNH HIỂN THỊ
                    </div>
                    <div class="pt-5"></div>
                    <div class="form-group">
                        <label class="form-label" asp-for="DatePosted"></label> <strong class="text-danger">*</strong> <span asp-validation-for="DatePosted"></span>
                        <div class="input-group input-group-t">
                            <div class="input-group-addon br-none">
                                &nbsp;
                                <i class="material-icons">event_available</i>
                            </div>
                            <input type="text" value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")" class="form-control input-sm form-control-t" asp-for="DatePosted">
                        </div>
                    </div>
                    <div class="pt-5"></div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                        <label for="Status" asp-for="Status"></label>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_1">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                                        <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_1">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                                        <div class="controls">
                                            <input seo-page-name type="text" onkeydown="GenSlug()" onkeyup="GenSlug()" class="form-control input-sm form-control-t" asp-for="Name">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label class="form-label">Thời gian khuyến mãi hiệu lực</label> <strong class="text-danger">*</strong>
                                                <div class="input-group input-group-t">
                                                    <div class="input-group-addon br-none">
                                                        Từ ngày
                                                    </div>
                                                    <div style="position:relative;">
                                                        <input type="text" value="@DateTime.Now.ToString("dd/MM/yyyy")" class="form-control input-sm form-control-t" asp-for="StartDate">
                                                        <span asp-validation-for="StartDate"></span>
                                                    </div>
                                                    <div class="input-group-addon br-none" style="border-left:none;">
                                                        Đến ngày
                                                    </div>
                                                    <div style="position:relative;">
                                                        <input type="text" value="@DateTime.Now.AddDays(7).ToString("dd/MM/yyyy")" class="form-control input-sm form-control-t" asp-for="EndDate">
                                                        <span asp-validation-for="EndDate"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Summary"></label> <span asp-validation-for="Summary"></span>
                                        <div class="controls">
                                            <textarea id="ricktextSummary" class="form-control form-control-t" rows="3" placeholder="Tóm tắt" asp-for="Summary"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Content"></label> <span asp-validation-for="Content"></span>
                                        <div class="controls">
                                            <textarea seo-page-content id="ricktextContent" class="form-control form-control-t" rows="3" placeholder="Mô tả" asp-for="Content"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TagIds"></label>
                                        <select asp-items="@Model.TagSelectList" multiple data-action-add="@Url.Action("AddTag")" style="width:100%;" data-action="@Url.Action("SearchTag")" asp-for="TagIds" class="form-control ms form-tag"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <partial name="_ReferenceModule" model="@(new PT.Domain.Model.LinkReferenceBaseModel() { Language =Model.Language , Type = Model.Type,LinkId = Model.LinkId })" />
                        <partial name="_SeoModule" model="@(PT.Shared.MapModel<PT.Domain.Model.SeoModel>.Go(Model))" />
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <a button-submit data-language="@Model.Language" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    initRickText();
    $("[name='DatePosted']").toDateTimePicker();
    $("[name='Lastmod']").toDateTimePicker();
    $("[name='StartDate'],[name='EndDate']").toRangeDatePicker();
    initAutoComplate();
</script>