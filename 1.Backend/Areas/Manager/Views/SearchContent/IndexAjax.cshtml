@model PT.Domain.Model.BaseSearchModel<List<PT.Domain.Model.ContentPage>>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    int i = 1;
}
<tr style="display:none !important;">
    <td colspan="999999">
        <input type="hidden" grid-data-page value="@Model.Page" />
        <input type="hidden" grid-data-totalrows value="@Model.TotalRows" />
        <input type="hidden" grid-data-limit value="@Model.Limit" />
    </td>
</tr>
@if (Model.TotalRows == 0)
{
    <tr>
        <td colspan="999">Không tìm thấy bản ghi nào</td>
    </tr>
}
@foreach (var item in Model.Data)
{
<tr class="tr-status-@(item.Status)">
    <td class="text-center">@PT.Shared.Functions.GenSTT(i, Model.Page, Model.Limit)</td>
    <td>
    
        @if (item.Type == PT.Domain.Model.CategoryType.Blog)
        {
            <a target="_blank" asp-action="Index" asp-controller="BlogManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else if (item.Type == PT.Domain.Model.CategoryType.Tag)
        {
            <a target="_blank" asp-action="Index" asp-controller="TagManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else if (item.Type == PT.Domain.Model.CategoryType.Service)
        {
            <a target="_blank" asp-action="Index" asp-controller="ServiceManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else if (item.Type == PT.Domain.Model.CategoryType.Page)
        {
            <a target="_blank" asp-action="Index" asp-controller="PageManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else if (item.Type == PT.Domain.Model.CategoryType.FAQ)
        {
            <a target="_blank" asp-action="Index" asp-controller="FAQManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else if (item.Type == PT.Domain.Model.CategoryType.PromotionInformation)
        {
            <a target="_blank" asp-action="Index" asp-controller="PromotionInformationManager" asp-route-key="@item.Name" asp-route-language="@item.Language"><span class="text-primary text-name">@item.Name</span></a>
        }
        else
        {
            <span class="text-primary text-name">@item.Name</span>
        }
    </td>
</tr>
    i++;
}