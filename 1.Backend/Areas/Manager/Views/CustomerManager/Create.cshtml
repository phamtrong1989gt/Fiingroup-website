@model PT.Domain.Model.CustomerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Options.IOptions<PT.Domain.Model.BaseSettings> _baseSettings
@{
    Layout = null;
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<form form-edit asp-action="Create">
    <input type="hidden" name="categoryIds" />
    @Html.AntiForgeryToken()
    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> THÊM MỚI NHÂN VIÊN </h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="row">
                <div class="col-md-3">
                    <div class="labelinfo-t bg-info mb-10">
                        ẢNH ĐẠI DIỆN
                    </div>
                    <div>
                        <div class="thumbnail imgfull avatar m-b-10" file-loadding>
                            <div class="image">
                                <img file-image id="imgBanner" alt="avatar" onerror="this.onerror=null;this.src = '/Content/Admin/images/no-avatar.jpg';" src="@(Model.Banner??" ")" class="img-responsive">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-t">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Banner">
                                <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                                    <a button-open-file-manager data-img="imgBanner" data-target="Banner" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">attach_file</i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="labelinfo-t bg-info mb-10">
                        CẤU HÌNH HIỂN THỊ
                    </div>
                    <div class="pt-5"></div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                        <label for="Status" asp-for="Status"></label>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_1">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                                        <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_1">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="FullName"></label> <strong class="text-danger">*</strong> <span asp-validation-for="FullName"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="FullName">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Birthday"></label> <span asp-validation-for="Birthday"></span>
                                                <div class="input-group input-group-t">
                                                    <div class="input-group-addon br-none">
                                                        &nbsp;
                                                        <i class="material-icons">event_available</i>
                                                    </div>
                                                    <input asp-format="{0:dd/MM/yyyy}" type="text" class="form-control input-sm form-control-t" asp-for="Birthday">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="form-label">Trạng thái</label>
                                                <div class="controls">
                                                    <input type="radio" id="radio_0" value="@PT.Domain.Model.Customer.CustomerGender.Unknown" asp-for="Gender" class="with-gap radio-col-blue" />
                                                    <label for="radio_0" class="labelradio">Chưa xác định</label>
                                                    &nbsp;
                                                    <input type="radio" id="radio_2" value="@PT.Domain.Model.Customer.CustomerGender.Male" asp-for="Gender" class="with-gap radio-col-green" />
                                                    <label for="radio_2" class="labelradio">Nam</label>
                                                    &nbsp;
                                                    <input type="radio" id="radio_3" value="@PT.Domain.Model.Customer.CustomerGender.Female" asp-for="Gender" class="with-gap radio-col-red" />
                                                    <label for="radio_3" class="labelradio">Nữ</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Email"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Email"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Phone"></label> <span asp-validation-for="Phone"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="Phone">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Country"></label> <span asp-validation-for="Country"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="Country">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Address"></label> <span asp-validation-for="Address"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="Address">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Content"></label> <span asp-validation-for="Content"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent" class="form-control form-control-t" rows="3" placeholder="Mô tả" asp-for="Content"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <a button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    $("[name='Birthday']").toDatePicker();
    initRickText();
</script>