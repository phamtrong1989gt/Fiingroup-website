@model PT.Domain.Model.ImageGalleryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Options.IOptions<PT.Domain.Model.BaseSettings> _baseSettings
@{
    Layout = null;
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<form form-edit asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Language" />

    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="categoryIds" />
    <input asp-for="Language" type="hidden" />
    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> CẬP NHẬT THƯ VIỆN HÌNH ẢNH - <span class="text-danger">@PT.Shared.ListData.ListLanguage.FirstOrDefault(x => x.Id == Model.Language)?.Name</span></h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="modal-body">
            <div class="divmodal">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne_4">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" href="#collapseOne_4" aria-expanded="true" aria-controls="collapseOne_4">
                                            <i class="material-icons">photo_library</i> Hình ảnh trong album
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne_4" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_4">
                                    <div class="panel-body">
                                        <div grid-index-Image data-url='@Url.Action("ListImage")' data-ischangeurl="false" data-funtion="getDataGridImage">
                                            <input type="hidden" grid-input name="imageGalleryId" asp-for="Id" />
                                            <div grid-loading class="card card-t card-loading" style="box-shadow:none;">
                                                <div class="header bg-blue-grey">
                                                    <h4 class="num-t m-l-20">
                                                        Danh sách hình ảnh
                                                    </h4>
                                                    <ul class="header-dropdown m-r--5 header-dropdown-t">
                                                        <li class="dropdown">
                                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                                <i class="material-icons">apps</i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="body body-t">
                                                    <div>
                                                        <table class="table table-striped table-bordered table-t">
                                                            <thead>
                                                                <tr>
                                                                    <th style="width:40px;">TT</th>
                                                                    <th style="width:400px;">Tên/Danh mục</th>
                                                                    <th>Hình ảnh 1</th>
                                                                    <th>Hình ảnh 2</th>
                                                                    <th style="width:100px;">Hành động</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody grid-data></tbody>
                                                        </table>
                                                    </div>
                                                    <div class="divpagination">
                                                        <div class="row">
                                                            <div class="col-md-4 mb-5">
                                                                <a data-acction-type="create" data-parent="[grid-index-Image]" data-form="[form-edit-grid-Image]" button-edit-grid data-action="@Url.Action("CreateImage",new { imageGalleryId=Model.Id, language = Model.Language})" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-table-edit btn-sm btn-icon bg-indigo waves-effect"><i class="material-icons">add</i> <span>Thêm mới</span></a>
                                                            </div>
                                                            <div class="col-md-8 mb-5">
                                                                <nav grid-pagination class="pg-t"></nav>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne_1">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                                            <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne_1" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_1">
                                    <div class="panel-body">
                                        <div class="form-group mb-10">
                                            <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                                            <div class="controls">
                                                <input type="text" seo-page-name class="form-control input-sm form-control-t" placeholder="" asp-for="Name">
                                            </div>
                                        </div>
                                        <textarea seo-page-content class="hide"></textarea>
                                        <div class="form-group">
                                            <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                                            <label for="Status" asp-for="Status"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <partial name="_ReferenceModule" model="@(new PT.Domain.Model.LinkReferenceBaseModel() { Language =Model.Language , Type = Model.Type,LinkId = Model.LinkId })" />
                            <partial name="_SeoModule" model="@(PT.Shared.MapModel<PT.Domain.Model.SeoModel>.Go(Model))" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <button button-delete data-language="@Model.Language" data-action="@Url.Action("Delete",new { id=Model.Id})" data-retur-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
        <a button-submit data-language="@Model.Language" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    $("[name='Lastmod']").toDateTimePicker();
    getDataGridImage(1, false)
</script>