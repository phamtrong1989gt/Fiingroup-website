@model PT.Domain.Model.ScheduleItem
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<form form-edit-schedule asp-action="EditSchedule">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Data" />
    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title" id="largeModalLabel"><i class="material-icons">group_add</i> CẬP NHẬT LỊCH HẸN '@Model.Title'</h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="form-group mb-5">
                <label class="form-label">Khách hàng</label>
                <div class="">
                    <a><span class="text-primary text-name">@Model.Title</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-5">
                        <label class="form-label">Ngày hẹn</label>
                        <div class="controls">
                            <input type="text" asp-format="{0:dd/MM/yyyy}" asp-for="Start" class="form-control input-sm form-control-t datepicker" placeholder="">
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group mb-5">
                        <label class="form-label">Giờ hẹn</label> <strong class="text-danger">*</strong>
                        <div class="input-group input-group-t">
                            <div class="input-group-addon br-none">
                                Giờ hẹn từ
                            </div>
                            <input type="text" asp-for="FromTime" class="form-control input-sm form-control-t timepicker" placeholder="">
                            <div class="input-group-addon blr-none">
                                Giờ hẹn đến
                            </div>
                            <input type="text" asp-for="ToTime" class="form-control input-sm form-control-t timepicker" placeholder="">
                            <span style="top:-25px;" asp-validation-for="FromTime"></span>
                            <span style="top:-25px;" asp-validation-for="ToTime"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a button-submit data-form="[form-edit-schedule]" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Đưa về đơn chờ</span>" class="btn btn-icon btn-default waves-effect"><i class="material-icons">reply</i> <span>Đưa về đơn chờ</span></a>
        <button onclick="removeSlide('@Model.UniqueId','@Model.ContactId')" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
        <a button-submit data-form="[form-edit-schedule]" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    initTime();
</script>