@model PT.Domain.Model.TestimonialModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<form form-edit asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Language" />
    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> CẬP NHẬT ĐÁNH GIÁ KHÁCH HÀNG</h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="row">
                <div class="col-md-3">
                    <div class="labelinfo-t bg-info mb-10">
                        ẢNH ĐẠI DIỆN
                    </div>
                    <div>
                        <div class="thumbnail imgfull avatar m-b-10" file-loadding>
                            <div class="image">
                                <img file-image id="imgBanner" alt="avatar" onerror="this.onerror=null;this.src = '/Content/Admin/images/no-avatar.jpg';" src="@(Model.Avatar??" ")" class="img-responsive">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-t">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Avatar">
                                <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                                    <a button-open-file-manager data-img="imgBanner" data-target="Avatar" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">attach_file</i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-9">
                    <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_1">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                                        <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_1">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="FullName"></label> <strong class="text-danger">*</strong> <span asp-validation-for="FullName"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="FullName">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Email"></label>  <span asp-validation-for="Email"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" asp-for="Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Rating"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Rating"></span>
                                                <div class="input-group input-group-t">
                                                    <div class="input-group-addon br-none">
                                                        &nbsp;
                                                        <i class="material-icons">star_rate</i>
                                                    </div>
                                                    <input type="number" class="form-control input-sm form-control-t" asp-for="Rating">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" asp-for="Type"></label> <span asp-validation-for="Type"></span>
                                        <div class="controls">
                                            <select asp-for="Type" onchange="typeChange(this)" class="input-sm form-control-t show-tick">
                                                <option value="@PT.Domain.Model.Contact.ContactType.Testimonial">@PT.Domain.Model.Contact.ContactType.Testimonial.GetDisplayName()</option>
                                                <option value="@PT.Domain.Model.Contact.ContactType.TestimonialVideo">@PT.Domain.Model.Contact.ContactType.TestimonialVideo.GetDisplayName()</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group" id="typeData1" style="@(Model.Type == PT.Domain.Model.Contact.ContactType.TestimonialVideo ? @"display: none" : "")">
                                        <label class="form-label" asp-for="Content"></label> <span asp-validation-for="Content"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent" class="form-control form-control-t" rows="6" placeholder="Mô tả" asp-for="Content"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group" id="typeData2" style="@(Model.Type == PT.Domain.Model.Contact.ContactType.Testimonial ? @"display: none" : "")">
                                        <label class="form-label" asp-for="Address"></label>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="Address">
                                        </div>
                                    </div>

                                    <div class="pt-5"></div>
                                    <div class="form-group">
                                        <input type="checkbox" asp-for="IsHome" class="filled-in chk-col-green" />
                                        <label for="IsHome" asp-for="IsHome"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <button button-delete data-action="@Url.Action("Delete",new { id=Model.Id})" data-retur-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
        <a button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    initRickText();
</script>