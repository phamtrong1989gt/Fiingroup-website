@model PT.Domain.Model.TourModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Options.IOptions<PT.Domain.Model.BaseSettings> _baseSettings
@{
    Layout = null;
    string altId = Guid.NewGuid().ToString();
    string pathUpload = Url.Action("UploadImage", new { altId, type = 1, id = 0 });

    var fileUpload = new PT.Domain.Model.PluginFileUploadModel
    {
        Extention = _baseSettings.Value.ImagesType,
        InputName = "Photos",
        MaxSize = _baseSettings.Value.DocumentsMaxSize,
        UrlUpload = Url.Action("UploadImage", new { id = Model.Id , altId }),
        ParentTagName = "file-parent-photos",
        UrlFile = "",
        FileDatas = Model.PhotoFileDatas,
        FileDataString = Model.Photos,
        IsS = true
    };

    var fileUploadSingleBanner = new PT.Domain.Model.PluginFileUploadModel
    {
        Extention = _baseSettings.Value.ImagesType,
        InputName = "Banner",
        MaxSize = _baseSettings.Value.DocumentsMaxSize,
        UrlUpload = Url.Action("UploadImage", new { id = Model.Id, altId }),
        ParentTagName = "file-parent-photos-1",
        FileDatas = Model.PhotoFileDatas,
        FileDataString = Model.Banner,
        IsS = true,
        IsSingle = true
    };

    var fileUploadSingle = new PT.Domain.Model.PluginFileUploadModel
    {
        Extention = _baseSettings.Value.ImagesType,
        InputName = "BannerHeader",
        MaxSize = _baseSettings.Value.DocumentsMaxSize,
        UrlUpload = Url.Action("UploadImage", new { id = Model.Id, altId }),
        ParentTagName = "file-parent-photos-2",
        FileDatas = Model.PhotoFileDatas,
        FileDataString = Model.BannerHeader,
        IsS = true,
        IsSingle = true
    };
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<form form-edit asp-action="Create">
    <input type="hidden" asp-for="Language" />
    <input type="hidden" asp-for="CategoryIds" />
    <input type="hidden" name="altId" value="@altId" />
    <input asp-for="Language" type="hidden" />
    @Html.AntiForgeryToken()

    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> THÊM MỚI TOUR - <span class="text-danger">@PT.Shared.ListData.ListLanguage.FirstOrDefault(x => x.Id == Model.Language)?.Name</span></h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="row">
                <div class="col-md-9">
                    <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">

                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_1">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                                        <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_1">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Style"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Style"></span>
                                        <div class="controls">
                                            <select asp-for="Style" onchange="changeStyle()" data-live-search="true" data-size="10" asp-items="Model.TourStyleSelectListItems" class="input-sm form-control-t show-tick">
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                                        <div class="controls">
                                            <input type="text" seo-page-name onkeydown="GenSlug()" onkeyup="GenSlug()" class="form-control input-sm form-control-t" placeholder="" asp-for="Name">
                                        </div>
                                    </div>

                                    <div class="row forCar">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="From"></label><span asp-validation-for="Name"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" placeholder="Ví dụ: Ha Noi" asp-for="From">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="To"></label><span asp-validation-for="To"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" placeholder="Ví dụ: Ha Noi" asp-for="To">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="PickUp"></label><span asp-validation-for="PickUp"></span>
                                                <div class="controls">
                                                    <input type="text" class="form-control input-sm form-control-t" placeholder="Ví dụ: 06:00;09:00;13:00" asp-for="PickUp">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="Order"></label><span asp-validation-for="Order"></span>
                                                <div class="controls">
                                                    <input type="number" class="form-control input-sm form-control-t" placeholder="Ví dụ: 1" asp-for="Order">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" asp-for="Address"></label> <span asp-validation-for="Address"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" placeholder="" asp-for="Address">
                                        </div>
                                    </div>

                                    <div class="form-group" style="display:none;">
                                        <label class="form-label" asp-for="TourTypeId"></label> <strong class="text-danger">*</strong> <span asp-validation-for="TourTypeId"></span>
                                        <div class="controls">
                                            <select asp-for="TourTypeId" asp-items="Model.TourTypeSelectListItems" class="input-sm form-control-t show-tick">
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" asp-for="Overview"></label> <span asp-validation-for="Overview"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent" seo-page-content class="form-control form-control-t" rows="3" placeholder="Mô tả" asp-for="Overview"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group forTour">
                                        <label class="form-label" asp-for="Trips"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Trips"></span>
                                        <div class="controls">
                                            <input class="form-control form-control-t" type="text" placeholder="Ví dụ: Hà Nội, Đà Nẵng, TP Hồ Chí Minh" asp-for="Trips">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default" style="display:none;">
                            <div class="panel-heading" role="tab" id="headingOne_2">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_2" aria-expanded="true" aria-controls="collapseOne_2">
                                        <i class="material-icons">perm_contact_calendar</i> Thông tin chi tiết
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_2">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="DetailNote"></label> <span asp-validation-for="DetailNote"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent1" class="form-control form-control-t" rows="12" asp-for="DetailNote"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" asp-for="DetailDifference"></label> <span asp-validation-for="DetailDifference"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent2" class="form-control form-control-t" rows="12" asp-for="DetailDifference"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" asp-for="DetailServicesInclusion"></label> <span asp-validation-for="DetailServicesInclusion"></span>
                                        <div class="controls">
                                            <textarea id="ricktextContent3" class="form-control form-control-t" rows="12" asp-for="DetailServicesInclusion"></textarea>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_33">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_33" aria-expanded="true" aria-controls="collapseOne_33">
                                        <i class="material-icons">photo_library</i> Gallery
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_33" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_33">
                                <div class="panel-body">
                                    <partial name="_FileUpload" model="@fileUpload" />
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingOne_4">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" href="#collapseOne_4" aria-expanded="true" aria-controls="collapseOne_4">
                                        <i class="material-icons">calendar_today</i> Lịch trình
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseOne_4" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_4">
                                <div class="panel-body">
                                    Tạo mới Tour trước mới sử dụng được chức năng này
                                </div>
                            </div>
                        </div>

                        <partial name="_ReferenceModule" model="@(new PT.Domain.Model.LinkReferenceBaseModel() { Language =Model.Language , Type = Model.Type, LinkId = Model.LinkId })" />
                        <partial name="_SeoModule" model="@(PT.Shared.MapModel<PT.Domain.Model.SeoModel>.Go(Model))" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="labelinfo-t bg-info mb-10">
                        Ảnh đại diện
                    </div>
                    <div>
                        <partial name="_FileUploadSingle" model="@fileUploadSingleBanner" />
                    </div>

                    <div class="labelinfo-t bg-info mb-10">
                        Ảnh header
                    </div>

                    <div>
                        <partial name="_FileUploadSingle" model="@fileUploadSingle" />
                    </div>
                    <div class="labelinfo-t bg-info mb-10">
                        DANH MỤC TIN
                    </div>
                    <div class="form-group">
                        <div class="controls tree-category" id="using_json_2">
                        </div>
                    </div>

                    <div class="forTour">
                        <div class="labelinfo-t bg-info mb-10">
                            THỜI GIAN
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Days"></label> <span asp-validation-for="Days"></span>
                            <div class="controls">
                                <input type="number" class="form-control input-sm form-control-t" placeholder="" asp-for="Days">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Nights"></label> <span asp-validation-for="Nights"></span>
                            <div class="controls">
                                <input type="number" class="form-control input-sm form-control-t" placeholder="" asp-for="Nights">
                            </div>
                        </div>
                    </div>

                    <div class="labelinfo-t bg-info mb-10">
                        CẤU HÌNH HIỂN THỊ
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="AdultPrice"></label> <span asp-validation-for="AdultPrice"></span>
                        <div class="controls">
                            <input type="number" class="form-control input-sm form-control-t" placeholder="Giá" asp-for="AdultPrice">
                        </div>
                    </div>

                    <div class="form-group optionPrice">
                        <label class="form-label" asp-for="ChildrenPrice"></label> <span asp-validation-for="ChildrenPrice"></span>
                        <div class="controls">
                            <input type="number" class="form-control input-sm form-control-t" placeholder="Giá trẻ em" asp-for="ChildrenPrice">
                        </div>
                    </div>


                    <div class="form-group optionPrice">
                        <label class="form-label" asp-for="InfantPrice"></label> <span asp-validation-for="InfantPrice"></span>
                        <div class="controls">
                            <input type="number" class="form-control input-sm form-control-t" placeholder="Giá trẻ dưới 2 tuổi" asp-for="InfantPrice">
                        </div>
                    </div>

                    <div class="form-group optionPrice">
                        <label class="form-label" asp-for="ElderlyPrice"></label> <span asp-validation-for="ElderlyPrice"></span>
                        <div class="controls">
                            <input type="number" class="form-control input-sm form-control-t" placeholder="Giá người 60+" asp-for="ElderlyPrice">
                        </div>
                    </div>

                    <div class="pt-5"></div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                        <label for="Status" asp-for="Status"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <a button-submit data-language="@Model.Language" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>

