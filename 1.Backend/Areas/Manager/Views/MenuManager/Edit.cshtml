@model PT.Domain.Model.MenuModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<style>
    .tt-menu {
        z-index: 999999;
    }
</style>
<div class="modal-header">
    <h4 class="modal-title">
        <i class="material-icons">edit</i> CẬP NHẬT MENU - <span class="text-warning">@Model.PortalName</span> - <span class="text-danger">@PT.Shared.ListData.ListLanguage.FirstOrDefault(x => x.Id == Model.Language)?.Name </span>
</h4>
</div>
<button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</button>
<div class="modal-body">
    <div class="divmodal">
        <div class="panel-group panel-website full-body" id="accordion_19" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab"  id="headingOne_1">
                    <h4 class="panel-title">
                        <a role="button"  data-toggle="collapse" href="#collapseOne_1" aria-expanded="true" aria-controls="collapseOne_1">
                            <i class="material-icons">perm_contact_calendar</i> Thông tin chung
                        </a>
                    </h4>
                </div>
                <div id="collapseOne_1" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_1">
                    <div class="panel-body">
                        <form form-edit asp-action="Edit">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Language" />
                            <input type="hidden" asp-for="Id" />
                            <input asp-for="Language" type="hidden" />
                            <div class="sumaryValidateForm" asp-validation-summary="All"></div>

                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="Code"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Code"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="Code">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="PortalId" />
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="HasChildrentClass1"></label> <span asp-validation-for="HasChildrentClass1"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="HasChildrentClass1">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="HasChildrentClass2"></label> <span asp-validation-for="HasChildrentClass2"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="HasChildrentClass2">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="HasChildrentClass3"></label> <span asp-validation-for="HasChildrentClass3"></span>
                                        <div class="controls">
                                            <input type="text" class="form-control input-sm form-control-t" asp-for="HasChildrentClass3">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Template"></label> <span asp-validation-for="Template"></span>
                                <div class="controls">
                                    <textarea  class="form-control form-control-t" rows="3" asp-for="Template"></textarea>
                                </div>
                                <div class="help-block">Sử dụng biểu mẫu <strong>[Content]</strong></div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Template1"></label> <span asp-validation-for="Template1"></span>
                                <div class="controls">
                                    <textarea  class="form-control form-control-t" rows="3" asp-for="Template1"></textarea>
                                </div>
                                <div class="help-block">Sử dụng biểu mẫu <strong>[HasChildrent] [For][/For] [Url] [Target] [Name] [Icon] [Children] [AddClass]</strong></div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Template2"></label> <span asp-validation-for="Template2"></span>
                                <div class="controls">
                                    <textarea  class="form-control form-control-t" rows="3" asp-for="Template2"></textarea>
                                </div>
                                <div class="help-block">Sử dụng biểu mẫu <strong>[HasChildrent] [For][/For] [Url] [Target] [Name] [Icon] [Children] [AddClass]</strong></div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Template3"></label> <span asp-validation-for="Template3"></span>
                                <div class="controls">
                                    <textarea  class="form-control form-control-t" rows="3" asp-for="Template3"></textarea>
                                </div>
                                <div class="help-block">Sử dụng biểu mẫu <strong>[HasChildrent] [For][/For] [Url] [Target] [Name] [Icon] [Children] [AddClass]</strong></div>
                            </div>
                            <div class="pt-10"></div>
                            <div class="form-group">
                                <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                                <label for="Status" asp-for="Status"></label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne_3">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" href="#collapseOne_3" aria-expanded="true" aria-controls="collapseOne_3">
                            <i class="material-icons">view_list</i> Danh sách menu item
                        </a>
                    </h4>
                </div>
                <div id="collapseOne_3" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne_3">
                    <div class="panel-body" form-static>
                        <div class="row">
                            <div class="col-md-12 formatControl2">
                                <a button-static button-static-add asp-action="CreateItem" asp-route-menuId="@Model.Id" class="btn btn-icon btn-primary waves-effect"><i class="material-icons">add</i> <span>Thêm menu item</span></a>
                                <button data-id="@Model.Id" disabled button-update-status data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Cập nhật sắp xếp</span>" data-action="@Url.Action("UpdateOrder",new { id = Model.Id })" type="button" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">system_update_alt</i> <span>Cập nhật sắp xếp</span></button>
                                <button data-id="@Model.Id" disabled button-cancel-status type="button" class="btn btn-icon btn-default waves-effect"><i class="material-icons">reply</i> <span>Hoàn tác</span></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5" loading-tree style="min-height:384px;">
                                <div>
                                    <div id="bindCategory" class="dd nestable-with-handle"></div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div id="ABC" style="margin-top: 7px;">
                                    <div form-loading>
                                        <div form-show></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer" style="text-align:center;">
    <button button-delete data-language="@Model.Language" data-action="@Url.Action("Delete", new { id = Model.Id })" data-retur-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
    <a button-submit data-language="@Model.Language" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
</div>

<script>
    initRickText();
    initData(@Model.Id);
</script>