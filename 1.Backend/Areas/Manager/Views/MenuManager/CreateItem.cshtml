@model PT.Domain.Model.MenuItemModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PT.Domain.Model
@{
    Layout = null;
}
<div class="divStaticForm formatFromcate">
    <form form-edit-static asp-action="CreateItem">
        @Html.AntiForgeryToken()
        <input asp-for="MenuId" type="hidden" />
        <div class="sumaryValidateForm" asp-validation-summary="All"></div>
        <h3 class="titleStaticForm">Thêm mới Menu item</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" asp-for="Name">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Href"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Href"></span>
                    <div class="row">
                        <div class="col-md-9">
                            <span id="content-href"><input type="text" class="form-control input-sm form-control-t" asp-for="Href"></span>
                            <span id="content-local" style="display:none;">
                                <select data-size="10" data-live-search="true" data-action="@Url.Action("SearchLink")" asp-for="LinkId" class="input-sm form-control-t show-tick with-ajax">
                                    <option selected value="0">Chọn Link</option>
                                </select>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <span style="position:relative; top:4px;">
                                <input type="checkbox" asp-for="IsLinkLocal" class="filled-in chk-col-green" />
                                <label class="text-danger" for="IsLinkLocal">Link nội bộ</label>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label" asp-for="Class"></label> <span asp-validation-for="Class"></span>
                            <div class="controls">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Class">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label" asp-for="Icon"></label> <span asp-validation-for="Icon"></span>
                            <div class="input-group input-group-t">
                                <input id="Banner" type="text" class="form-control input-sm form-control-t" asp-for="Icon">
                                <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                                    <a button-open-file-manager data-img="imgBanner" data-target="Banner" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">attach_file</i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label" asp-for="Target"></label>  <span asp-validation-for="Target"></span>
                            <select data-action="@Url.Action("SearchService")" asp-for="Target" class="input-sm form-control-t show-tick">
                                <option value="_blank">_blank</option>
                                <option value="_parent">_parent</option>
                                <option value="_self">_self</option>
                                <option value="_top">_top</option>
                            </select>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <input type="checkbox" id="Status2" asp-for="Status" class="filled-in chk-col-green" />
                    <label for="Status2" asp-for="Status"></label>
                </div>
            </div>
        </div>
        <div class="divbtnform ">
            <a button-submit data-form="[form-edit-static]" data-id="@Model.MenuId" data-type="createItem" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
        </div>
    </form>
</div>

<script>
    $("[form-edit-static] [name='IsLinkLocal']").on("change", function () {
        isLinkLocalChange();
    });

    function isLinkLocalChange() {
        if ($("[form-edit-static] [name='IsLinkLocal']").prop("checked")) {
            $("#content-local").show();
            $("#content-href").hide();
        }
        else {
            $("#content-local").hide();
            $("#content-href").show();
        }
    }
    $("[form-edit-static] #LinkId").toSelectAutocomplete({}, function ($data) {
        return $data;
    });
</script>