@model string
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<div class="row" loading-tree>
    <div class="col-md-12" style="margin-bottom:5px;">
        <div style="padding:10px;background:#f0f0f0;">
            <a button-popup data-target="#myModalBig" asp-action="Create" asp-route-language="@Model" class="btn btn-icon btn-primary waves-effect"><i class="material-icons">add</i> <span>Thêm danh mục</span></a>
            <button data-language="@Model" disabled button-update-status data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Cập nhật thay đổi</span>" data-action="@Url.Action("Setting")" type="button" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">system_update_alt</i> <span>Cập nhật thay đổi</span></button>
            <button data-language="@Model" disabled button-cancel-status type="button" class="btn btn-icon btn-default waves-effect"><i class="material-icons">reply</i> <span>Hoàn tác</span></button>
        </div>
    </div>
    <div class="col-md-6" >
        <div id="bindCategory" class="dd nestable-with-handle"></div>
    </div>
</div>
<script>
    initData("@Model");
</script>