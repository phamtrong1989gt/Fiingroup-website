    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <button button-delete data-action="@Url.Action("Delete",new { id = Model.Id})" data-retur-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-checked data-role-8 data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
        <a button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
<script>
    changeTypeRole();
    $("[name='newPassword']").val("");
    $("#IsChangePassword").change(function () {
        onChangePassword();
    });
    function onChangePassword() {
        if ($("#IsChangePassword").prop("checked")) {
            $("#divChangePassword").show();
            $("#NewPassword").removeAttr("disabled");
        }
        else {
            $("#divChangePassword").hide();
            $("#NewPassword").attr("disabled", "disabled");
        }
        $("#NewPassword").val("");
    }
    function onChangeRole() {
        $("input[name='isChange']").val(true);
        changeTypeRole();
    }
    function changeTypeRole() {
        if ($("#RoleId").val() != null && $("#RoleId").val() != undefined && $("#RoleId").val() != "") {
            $.get("@Url.Action("TypeRole")", { id: $("#RoleId").val(), userId: @Model.Id }, function (data) {
                $("#typeRole").html(data);
                $.AdminBSB.select.activate();
            });
        }
    }
</script>
