    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="row">
                @*<div class="col-md-2" file-parent>
                    <div class="labelinfo-t bg-info mb-10">
                        Ảnh đại diện
                    </div>
                    <div class="thumbnail imgfull avatar m-b-10" file-loadding>
                        <div class="image">
                            <img file-image alt="avatar" onerror="this.onerror=null;this.src = '/Content/Admin/images/no-avatar.jpg';" src="@(Model.Avatar??" ")" class="img-responsive imgAvatar">
                        </div>
                    </div>
                    <div>
                        <button file-button data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Chọn ảnh</span>" type="button" class="btn btn-primary btn-sm"><i class="material-icons">file_upload</i> <span>Chọn ảnh</span></button>
                        <input data-form="[form-edit]" data-url="@Url.Action("UploadAvatar",new { id=Model.Id})" file-input data-id="@Model.Id" type="file" name="dbFile" id="file" class="inputfile hide" />
                    </div>
                    <input type="hidden" data-input-form asp-for="Avatar" />
                </div>*@
                <div class="col-md-12">
                    <div class="labelinfo-t bg-info mb-10">
                        Thông tin chung
                    </div>
                    <div class="sumaryValidateForm" asp-validation-summary="All"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="Username"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Username"></span>
                                <div class="controls">
                                    <input type="text" disabled="disabled" class="form-control input-sm form-control-t" placeholder="Tên tài khoản" asp-for="Username">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="DisplayName"></label> <span asp-validation-for="DisplayName"></span>
                                <div class="controls">
                                    <input type="text" class="form-control input-sm form-control-t" placeholder="Tên hiển thị" asp-for="DisplayName">
                                </div>
                            </div>
                            <div class="form-group mt-10">
                                <div class="controls">
                                    <input type="checkbox" asp-for="IsLock" class="filled-in chk-col-red" />
