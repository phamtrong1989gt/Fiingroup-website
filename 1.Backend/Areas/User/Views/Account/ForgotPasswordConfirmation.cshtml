
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    .card .body {
        padding-top: 35px;
    }

    .field-validation-error {
        border: 1px solid #ffe5e5;
        background: #c60909 !important;
        padding: 2px 10px !important;
        border-radius: 0 !important;
        position: absolute;
        display: inline-block !important;
        box-shadow: 3px 3px 7px #aaa;
        top: -7px;
        color: #fff;
        right: 5px;
        z-index: 9;
        white-space: nowrap;
        font-size: 12px;
    }

        .field-validation-error:before {
            content: '';
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-top: 10px solid #c51244;
            position: absolute;
            bottom: -10px;
            right: 6px;
        }

    .card .body {
        padding-top: 35px;
        padding-bottom: 30px;
    }


    .login-box {
        width: 550px;
    }
    .login-page {
        max-width: 550px;
    }
    .login-page .login-box a {
        font-weight: 500;
        font-size: 13px;
    }

    
</style>
<div class="login-box">
    <div class="card">
        <div class="body">
            <form method="POST">
                @Html.AntiForgeryToken()
                <div style="font-size: 20px;font-weight: 500; margin-bottom: 12px;">Thao tác thành công!</div>
                <div class="info-phuchoi" style="margin-bottom:10px;">
                    Chúng tôi sẽ gửi cho bạn email có tên người dùng và liên kết để đặt lại mật khẩu của bạn, nếu không có vui lòng kiểm tra mục rác, hoặc spam.
                </div>
                <div class="row m-b--20">
                    <div class="col-xs-12" style="text-align:right;color:#3F51B5 !important;">
                        <a asp-action="Login">Quay lại trang đăng nhập?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}