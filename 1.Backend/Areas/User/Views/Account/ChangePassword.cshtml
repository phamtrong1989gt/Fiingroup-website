@model PT.Domain.Model.ChangePasswordViewModel
@addTagHelper *, Sakura.AspNetCore.Mvc.PagedList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<form form-edit asp-action="ChangePassword">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="form-label" asp-for="OldPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="OldPassword"></span>
        <div class="controls">
            <input type="password" autocomplete="off" class="form-control input-sm form-control-t" placeholder="Mật khẩu cũ của bạn" asp-for="OldPassword">
        </div>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="NewPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="NewPassword"></span>
        <div class="controls">
            <input type="password" autocomplete="off" class="form-control input-sm form-control-t" placeholder="Mật khẩu mới" asp-for="NewPassword">
        </div>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="ConfirmPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="ConfirmPassword"></span>
        <div class="controls">
            <input type="password" autocomplete="off" class="form-control input-sm form-control-t" placeholder="Nhập lại mật khẩu mới" asp-for="ConfirmPassword">
        </div>
    </div>
    <div class="row mt-15">
        <div class="col-md-12 mb-0">
            <div class="divbtnform">
                <button button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" type="button" class="btn  btn-p-t  btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></button>
            </div>
        </div>
    </div>
</form>
