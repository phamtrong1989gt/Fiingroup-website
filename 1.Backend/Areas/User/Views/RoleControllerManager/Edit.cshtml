@model PT.Domain.Model.RoleControllerModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<form form-edit asp-action="Edit">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h4 class="modal-title"><i class="material-icons">edit</i> CẬP NHẬT QUYỀN Controller</h4>
    </div>
    <button title="Đóng cửa sổ" type="button" class="close btnclose-t" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-body">
        <div class="divmodal">
            <div class="sumaryValidateForm" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Id"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Id"></span>
                <input type="text" readonly asp-for="Id" class="form-control input-sm form-control-t" placeholder="Mã">
            </div>
            <div class="form-group">
                <label asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                <input type="text" asp-for="Name" class="form-control input-sm form-control-t" placeholder="Tên mô tả">
            </div>
            <div class="form-group">
                <label asp-for="Order"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Order"></span>
                <input type="number" asp-for="Order" class="form-control input-sm form-control-t" placeholder="">
            </div>

            <div class="form-group">
                <label asp-for="AreaId"></label> <strong class="text-danger">*</strong> <span asp-validation-for="AreaId"></span>
                <div class="controls">
                    <select data-live-search="true" asp-items="@Model.RoleAreaSelectList" asp-for="AreaId" class="input-sm form-control-t show-tick">
                        <option selected value="">Chọn area</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="GroupId"></label> <strong class="text-danger">*</strong> <span asp-validation-for="GroupId"></span>
                <div class="controls">
                    <select data-live-search="true" asp-items="@Model.RoleGroupSelectList" asp-for="GroupId" class="input-sm form-control-t show-tick">
                        <option selected value="">Chọn nhóm</option>
                    </select>
                </div>
            </div>
            <div class="form-group pt-10">
                <input type="checkbox" asp-for="Status" class="filled-in chk-col-green" />
                <label for="Status" asp-for="Status"></label>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center;">
        <a class="btn btn-icon btn-default waves-effect" data-dismiss="modal"><i class="material-icons">reply</i><span>Đóng</span></a>
        <button button-delete data-action="@Url.Action("Delete",new { id=Model.Id})" data-return-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-checked data-role-8 data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
        <a button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
    </div>
</form>
