@model PT.Domain.Model.ImageGallery
@addTagHelper *, PT.UI
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer  Localizer
@{
    Layout = "~/Views/Shared/_Home.cshtml";
    string language = PT.Base.CultureHelper.GetCurrentCulture.Id;

}
<div class="page-content">
    <!--section-->
    <div class="section mt-0">
        <div class="breadcrumbs-wrap">
            <div class="container">
                <div class="breadcrumbs">
                    <a href="/@Model.Language">@Localizer["Home"].Value</a>
                    <span>@Model.Name</span>
                </div>
            </div>
        </div>
    </div>

    <div class="section page-content-first">
        <div class="container">
            <div class="text-center mb-2  mb-md-3 mb-lg-4">
                <div class="h-sub theme-color">@Localizer["Our Clients Stories"].Value</div>
                <h1>@Model.Name</h1>
                <div class="h-decor"></div>
            </div>
            
        </div>
        <div class="container">
            <div class="text-center mb-3 mb-md-4 max-900">
                <p>@Html.Raw(Localizer["Note"].Value)</p>
            </div>
            <div class="filters-by-category mb-2 mb-lg-4">
                <div class="nav nav-pills justify-content-center">
                    @foreach (var item in Model.Categorys.OrderBy(x => x.ParentId))
                    {
                        if (item.ParentId == 0)
                        {
                    <a class="nav-link @((Context.Request.Query["c"].ToString()==item.Id.ToString() || string.IsNullOrEmpty(Context.Request.Query["c"]))?"active":"")" href="?page=1" role="tab" aria-expanded="true">
                        @if (language == "vi")
                        {
                            <span>Tất cả</span>
                        }
                        else
                        {
                            <span>All</span>
                        }
                    </a>
                        }
                        else
                        {
                            <a class="nav-link @(Context.Request.Query["c"].ToString()==item.Id.ToString()?"active":"")" href="?page=1&c=@item.Id" role="tab" aria-expanded="false">@item.Name</a>
                        }
                    }
                </div>
            </div>
            <div class="gallery-wrap">
                <div class="loading-content">
                    <div class="inner-circles-loader"></div>
                </div>
                <div class="gallery-smiles gallery-isotope" id="gallery">
                    @foreach (var item in Model.ListImage.Data)
                    {
                        <div class="gallery-item category2 category7">
                            <img src="@item.Image1" alt="@item.Name">
                            <div class="after-label">After</div>
                            <div class="before-label">Before</div>
                        </div>
                    }
                </div>
            </div>
            <div class="clearfix"></div>
            @Html.Raw(PT.Shared.Functions.GenPageList("", Model.ListImage.Page, Model.ListImage.TotalRows, Model.ListImage.Limit, $"&c={Context.Request.Query["c"]}"))
        </div>
    </div>
    @if (language == "vi")
    {
        <vc:view-module id="3" type="StaticInformation"></vc:view-module>
    }
    else if (language == "en")
    {
        <vc:view-module id="1012" type="StaticInformation"></vc:view-module>
    }
</div>